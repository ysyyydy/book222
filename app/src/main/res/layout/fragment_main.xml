<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                tools:context=".MainActivity"    >



    <!-- 底部布局 -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#EAE9E7"
            android:padding="10dp">

       <Button
               android:id="@+id/btnFragmentA"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:drawableTop="@drawable/home_button"
               android:text="首页"
               android:textColor="#000000"
               android:background="@android:color/transparent"
               android:layout_marginRight="8dp"/>

       <Button
               android:id="@+id/btnFragmentB"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:drawableTop="@drawable/bookshelf_button"
               android:text="书架"
               android:textColor="#000000"
               android:background="@android:color/transparent"
               android:layout_marginRight="8dp"/>

       <Button
               android:id="@+id/btnFragmentC"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:drawableTop="@drawable/square_button"
               android:text="测试"
               android:textColor="#000000"
               android:background="@android:color/transparent"
               android:layout_marginRight="8dp"/>

       <Button
               android:id="@+id/btnFragmentD"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:drawableTop="@drawable/chat_button"
               android:text="推广"
               android:textColor="#000000"
               android:background="@android:color/transparent"
               android:layout_marginRight="10dp"/>

       <Button
               android:id="@+id/btnFragmentE"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:drawableTop="@drawable/person_button"
               android:text="我的"
               android:textColor="#000000"
               android:background="@android:color/transparent"/>

   </LinearLayout>
   <FrameLayout
           android:id="@+id/fragment_container"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="100dp">
   </FrameLayout>


</RelativeLayout>