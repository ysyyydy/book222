<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- 顶部选项卡 -->
    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_browsing_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览记录" />

        <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_bookshelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书架记录" />

    </com.google.android.material.tabs.TabLayout>

    <!-- 浏览记录页面 -->
    <RelativeLayout
            android:id="@+id/layout_browsing_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TextView
                android:text="                         暂无浏览记录"
                android:layout_width="229dp"
                android:layout_height="86dp" android:id="@+id/textView"
                android:layout_alignParentEnd="true" android:layout_marginEnd="110dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="315dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    </RelativeLayout>
</RelativeLayout>
