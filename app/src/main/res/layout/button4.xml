<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="464dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:textSize="34sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="书评"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="40dp"/>
        <ImageView
                android:id="@+id/imageview_image"
                android:layout_width="match_parent"
                android:layout_height="492dp"
                android:src="@drawable/pinglun" app:srcCompat="@drawable/pinglun"/>
    </LinearLayout>
    <Button
            android:id="@+id/myButton"
            android:layout_width="322dp"
            android:layout_height="74dp"
            android:text="清除记录"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center" tools:ignore="ObsoleteLayoutParam" android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="26dp" app:iconTint="@color/teal_200"
            app:backgroundTint="#00BCD4" app:backgroundTintMode="src_in" app:iconTintMode="add"
            android:background="#00BCD4" android:layout_alignParentEnd="true" android:layout_marginEnd="30dp"/>


</RelativeLayout>